"
" nvim configuration
"

" load vim-plug plugins
call plug#begin('~/.config/nvim/plug')
" load sonokai colorscheme
Plug 'sainnhe/sonokai'
Plug 'itchyny/lightline.vim'
call plug#end()

" set graphical UI
if has('termguicolors')
    set termguicolors
endif
let g:sonokai_transparent_background=1
colorscheme sonokai
let g:lightline = {'colorscheme' : 'sonokai'}
" remove tildes at the end of buffer
let &fcs='eob: '

" other settings
syntax enable
set mouse=a
set tabstop=4
set shiftwidth=4
set expandtab
set smarttab
set smartindent
set number
set cursorline

